      <i class="far fa-paper-plane"></i>
      <% end %>


    <div class="left-navbar">
      <div class="search-bar p-2 bd-highlight pl-4">
        <div class="wrap">
          <%= form_tag cities_path, method: :get, class: "search" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Trouve ta ville",
              class: "searchTerm"
            %>
            <%= button_tag(type: "submit", class: "searchButton ") do %>
              <i class="fa fa-search"></i>
