<div class="backgroud-page background-light background-search">
  <div class="search-container text-center mt-5">
    <div class="progress-icon">
        <%= image_tag("icone/suitcases.png", style: "height: 50px; width: 50px;", class:"form--pictogram--progress suitcases") %>
        <%= image_tag("icone/passport.png", style: "height: 50px; width: 50px;", class:"form--pictogram--progress passport") %>
        <%= image_tag("icone/train.png", style: "height: 50px; width: 50px;", class:"form--pictogram--progress train") %>
        <%= image_tag("icone/tourist.png", style: "height: 50px; width: 50px;", class:"form--pictogram--progress tourist") %>
      </div>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    <%= form_tag cities_path, method: :get do %>
      <div class="step-1 mt-5">
        <h2> Coté météo t'es plutôt quoi ? </h2>
          <div class="row">
            <div class="col-4">
              <label for="chaud">
                <input type="radio" name="weather" class="card-input-element d-none" id="chaud" value="Chaud">

                  <div class="card card-body text-center">
                        <%= image_tag("icone/soleil.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                        <p>Je veux du soleil !</p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="modéré">
                <input type="radio" name="weather" class="card-input-element d-none" id="modéré" value="Modéré">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/modere.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p>Je m'adapte à tout !</p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="froid">
                <input type="radio" name="weather" class="card-input-element d-none" id="froid" value="Froid">

                  <div class="card card-body text-center">
                    <%= image_tag("icone/froid.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Je suis pas frileux ! </p>

                  </div>
              </label>
            </div>
          </div>
        </div>
      <div class="step-2 mt-5 hidden">
        <h2> On va jusqu'où ? </h2>
          <div class="row">
            <div class="col-4">
              <label for="proche">
                <input type="radio" name="distance" class="card-input-element d-none" id="proche">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/pas_loin.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Je suis casanier, pas trop loin ! </p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="France">
                <input type="radio" name="distance" class="card-input-element d-none" id="France">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/france.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> On reste dans le plus beau des pays ! </p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="Europe">
                <input type="radio" name="distance" class="card-input-element d-none" id="Europe">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/europe.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Peu m'importe, je vous fais confiance ! </p>
                  </div>
              </label>
            </div>
          </div>
        </div>
      <div class="step-3 mt-5 hidden">
        <h2> Dans quel environnement ? </h2>
          <div class="row">
            <div class="col-4">
              <label for="plage">
                <input type="radio" name="environment" class="card-input-element d-none" id="plage" value="Plage">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/plage.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Coquillages et crustacés </p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="nature">
                <input type="radio" name="environment" class="card-input-element d-none" id="nature" value="Nature">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/nature.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Je veux aussi des grands espaces ! </p>

                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="ville">
                <input type="radio" name="environment" class="card-input-element d-none" id="ville" value="Ville">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/ville.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> L'effervence des grandes mégapoles!</p>
                  </div>
              </label>
            </div>
          </div>
        </div>
      <div class="step-4 mt-5 hidden">
        <h2> Ce que tu préfères faire pendant les vacances... </h2>
          <div class="row">
            <div class="col-3">
              <label for="défouler">
                <input type="radio" name="activity" class="card-input-element d-none" id="défouler" value="Défouler">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/defouler.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Je veux me surpasser ! </p>
                  </div>
              </label>
            </div>

            <div class="col-3">
              <label for="détendre">
                <input type="radio" name="activity" class="card-input-element d-none" id="détendre" value="Detendre">
                  <div class="card card-body text-center">
                     <%= image_tag("icone/detente.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Plutôt farniente </p>
                  </div>
              </label>
            </div>




            <div class="col-3">
              <label for="culture">
                <input type="radio" name="activity" class="card-input-element d-none" id="culture" value="Culture">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/culture.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Faites moi découvrir une nouvelle culture ! </p>
                  </div>
              </label>
            </div>

            <div class="col-3">
              <label for="divertir">
                <input type="radio" name="activity" class="card-input-element d-none" id="divertir" value="divertir">
                  <div class="card card-body text-center">
                    <%= image_tag("icone/divertir.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Je veux m'amuser jusqu'aux aurores ! </p>
                  </div>
              </label>
            </div>
          </div>

        </div>
      <div class="step-5 mt-5 hidden">
        <h2> Une idée du budget ? </h2>
          <div class="row">
            <div class="col-4">
              <label for="economique">
                <input type="radio" name="price_range" class="card-input-element d-none" id="economique" value= 1>
                  <div class="card card-body text-center">
                    <%= image_tag("icone/pauvre.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                  <p> Vive les minis prix !</p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="normal">
                <input type="radio" name="price_range" class="card-input-element d-none" id="normal" value= 2>
                  <div class="card card-body text-center">
                    <div class="d-flex">
                      <%= image_tag("icone/aise.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                    </div>
                    <p> Je fais attention, sans me priver </p>
                  </div>
              </label>
            </div>

            <div class="col-4">
              <label for="cher">
                <input type="radio" name="price_range" class="card-input-element d-none" id="cher" value= 3>
                  <div class="card card-body text-center">
                    <div class="d-flex">
                      <%= image_tag("icone/riche.png", style: "height: 100px; width: 100px;", class:"form--pictogram") %>
                    </div>
                      <p> Je casse la tirelire ! </p>
                  </div>
              </label>
            </div>
          </div>
          <%= submit_tag "On part où ?", class: "btn btn-primary mt-5" %>
        </div>
    <% end %>
  </div>
</div>





