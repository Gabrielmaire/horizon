<div class="background-page background-light">
  <div class="city-show-grid">
    <div class="image-1" style="background-image: linear-gradient(360deg, rgba(39, 76, 119, 0.25) -0.45%, rgba(255, 255, 255, 0) 97.73%), url('<%= cl_image_path @city.photos.last.key %>')">
    </div>



    <div class="vertical-image" style="background-image: linear-gradient(360deg, rgba(39, 76, 119, 0.4) -0.45%, rgba(255, 255, 255, 0) 97.73%), url('<%= cl_image_path @city.photos.first.key %>')">
    </div>



    <div class="cta d-flex align-items-center justify-content-between">
        <%= link_to "Découvre les secrets", city_pois_path(@city), class: "btn-primary" %>
    </div>

    <div class="image-2" style="background-image: linear-gradient(360deg, rgba(39, 76, 119, 0) -0.45%, rgba(255, 255, 255, 0) 97.73%), url('<%= cl_image_path @city.photos.second.key %>')">
    </div>

    <div class="hero-banner d-flex " style="background-image: linear-gradient(80.37deg, rgba(0, 41, 107, 0.46) 15.14%, rgba(255, 255, 255, 0) 94.67%), url('<%= cl_image_path @city.photos.second.key %>');">
      <div class="banner-content">
        <h1><%= @city.name %></h1>
        <div class="details_city my-1">

              <div class="meteo ">
                <% if @city.weather == "Chaud" %>
                <%= image_tag("icone/soleil.png", style: "height: 30px;") %>
                <% elsif @city.weather == "Froid" %>
                <%= image_tag("icone/froid.png" , style: "height: 30px;") %>
                <% elsif @city.weather == "Modéré" %>
                <%= image_tag("icone/modere.png", style: "height: 30px;") %>
                <% end %>
              </div>

              <div class="environment ">
                <% if @city.environment == "Ville" %>
                <%= image_tag("icone/ville.png", style: "height: 30px;") %>
                <% elsif @city.environment == "Nature" %>
                <%= image_tag("icone/nature.png", style: "height: 30px;") %>
                <% elsif @city.environment == "Plage" %>
                <%= image_tag("icone/plage.png", style: "height: 30px;") %>
                <% end %>
              </div>

              <div class="activite  ">
                <% if @city.activity == "Detendre" %>
                <%= image_tag("icone/detente.png", style: "height: 30px;") %>
                <% elsif @city.activity == "Divertir" %>
                <%= image_tag("icone/divertir.png", style: "height: 30px;") %>
                <% elsif @city.activity == "Culture" %>
                <%= image_tag("icone/culture.png", style: "height: 30px;") %>
                <% elsif @city.activity == "Defouler" %>
                <%= image_tag("icone/defouler.png", style: "height: 30px;") %>
                <% end %>
              </div>

              <div class="price_range ">
                <% if @city.price_range == 1 %>
                <%= image_tag("icone/pauvre.png", style: "height: 30px;") %>
                <% elsif @city.price_range == 2 %>
                <%= image_tag("icone/aise.png", style: "height: 30px;") %>
                <% elsif @city.price_range == 3 %>
                <%= image_tag("icone/riche.png", style: "height: 30px;") %>
                <% end %>
              </div>

        </div>
      </div>
    </div>
    <div class="unmissable unmissable-city">
      <h4>Incontournables</h4>
      <div class="pois">
        <%# <h6>Les incontourbales</h6> %>
        <% @pois.sample(3).each do |poi| %>
          <%= link_to poi_path(poi) do %>
            <div class="restaurant d-flex align-items-center">
             <%= cl_image_tag poi.photos.first.key, crop: :scale %>
             <div class="restaurant-content">
                <div class="restaurant-title d-flex justify-content-between">
                  <h5><%= poi.name %></h5>
                </div>
                <p><%= poi.category %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="desc">
      <div class="city-description card p-4">
        <%= @city.description %>
        <div class="favorite-city card p-3 mt-4">
          <% if @favorite_city %>
              <h5><i class="far fa-heart" font-size="20px"></i> <%= 392 %> </h5>
          <% else %>
            <%= link_to city_favorite_cities_path(@city), method: :post do %>
                <h5><i class="fas fa-heart" font-size="20px"></i> <%= 392 %> personnes aiment <%= @city.name %></h5>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

