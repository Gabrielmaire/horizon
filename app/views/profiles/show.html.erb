<div class="parent-profile">
  
  <div class="background-light my-favorite-city-photo" style="background-image: linear-gradient(80.37deg, rgba(0, 41, 107, 0.35) 15.14%, rgba(255, 255, 255, 0) 94.67%), url('<%= cl_image_path @favorite_cities.last.city.photos.last.key %>');"> 
    <h3 class="testh3">VILLE PREFEREE</h3>
    <h1 class="testh1"><%= @favorite_cities.last.city.name %></h1>
  </div>

  <div class="background-light text-center user-details card p-2">
    <div class="his-username mx-auto">
      <h4> <%= @user.nickname %> l'aventurier! </h4>
    </div>
    <div class="mx-auto my-auto">
      <%=  cl_image_tag @user.avatar.key, width: 120, height: 120, crop: :fill, style: "border-radius: 50%;" %>
    </div>
    <div class="user-fav-icons d-flex align-items-center justify-content-around pt-3 pb-2">
      <%= image_tag("icone/detente.png", style: "height: 30px; width: 30px;") %>
      <%= image_tag("icone/soleil.png", style: "height: 30px; width: 30px;") %>
      <%= image_tag("icone/europe.png", style: "height: 30px; width: 30px;") %>
    </div>
  </div>

  <div class="les-villes">
    <p><strong>LES VILLES</strong></p>
    <div class="all-cards">
      <div class="profile-red-card">
        <h5><%= pluralize @favorite_cities.count, "ville visitée" %></h5>
        
        <p>La dernière : <%= @favorite_cities.last.city.name %></p>
      </div>
      <div class="my-cities d-flex align-items-center justify-content-around mt-3">
        <% @favorite_cities.each do |favorite_city| %>
          <%= link_to city_pois_path(favorite_city.city) do %>
            <div class="bcg-img" style="background-image: url('<%= cl_image_path favorite_city.city.photos.second.key %>');">
              <h4 class="mx-auto"><%= favorite_city.city.name %></h4>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="illustration-memphis" style="background-image: url('<%= image_path("profile-banner.png") %>');"> </div>

  <div class="last-activities">
    <p><strong>DERNIERES ACTIVITES</strong></p>
    <div class="all-pois">
      <% @favorites_pois.each do |favorite_poi| %>
        <%= link_to poi_path(favorite_poi.poi) do %>
          <div class="my-poi-image mb-3" style="background-image: linear-gradient(360deg, rgba(39, 76, 119, 0.50) -0.45%, rgba(255, 255, 255, 0) 97.73%), url('<%= cl_image_path favorite_poi.poi.photos.last.key %>');">
            <div class="my-poi-name"><%= favorite_poi.poi.name %></div> 
            <div class="my-poi-category"><%= favorite_poi.poi.category %></div> 
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="map-profile">
    <div id="map"
      style="width: 100%; height: 447px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  
</div>
